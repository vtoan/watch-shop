@page "/gio-hang"
@using Helper
@model CartModel
@section scripts{
    <script src="~/js/cart.page.js"></script>
}
<div class="banner-sm section">
    <p class="">Giỏ hàng</p>
</div>
<div class="container mb-4">
    <div class="breadcrumb">
        <a href="/">Trang chủ</a>/
        <a href="#">Giỏ hàng</a>
    </div>
</div>
<!-- ================== List Product ================== -->
<div class="container section">
    <div id="cart" class="row section">
        <div class="col-12 col-lg-8 mb-5">
            <!--Cart - Header List-->
            <div class="mb-3">
                <div class="d-flex align-items-center px-3">
                    <h3 class="">Sản phẩm</h3>
                    <p class="ml-auto"> <span id="count-items">0</span> sản phẩm
                    <p>
                </div>
                <hr class="bg-black mx-3" style="height: 1px;">
            </div>
            <!--Cart - List Item-->
            <div id="cart-container" style="min-height:200px;">
                <p class="text-center flex-grow-1 py-5">Đang tải dữ liệu...</p> 
            </div>
        </div>
        <div class="col-12 col-lg-4 mb-5">
            <div class="mb-3">
                <h3 class="pl-3">Đơn hàng</h3>
                <hr class="bg-black mx-3" style="height: 1px;">
            </div>
            <div class="m-3">
                <input prom-code name="promotion" style="width:72%;" type="text" placeholder="Mã giảm giá">
                <a prom-submit class="btn btn-sm bg-red white bold" >Áp dụng</a>
            </div>
            <table class="table text-4" style="margin-left: 0.2em;">
                <tbody>
                    <tr >
                        <td>Tạm tính</td>
                        <td order-total="" >0 đ</td>
                    </tr>
                    <tr class="d-none">
                        <td>Giảm giá</td>
                        <td order-promotion="" >0 đ</td>
                    </tr>
                    @foreach (var item in Model.ListFee)
                    {    
                         <tr>
                            <td>Phi</td>
                            <td order-fees fee-cost="@item.Cost">@PageHelper._renderDiscount((double)item.Cost)</td>
                        </tr>
                    }
                    <tr class="bold">
                        <td>Thanh Toán</td>
                        <td class="red" order-pay>0 đ</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-12 text-center">
            <form method="POST">
                <button class="btn btn-sm bg-red white w-25 bold" type="submit"> Tiếp tục</button>
            </form>
        </div>
    </div>
</div>
<!-- ================== End List Product ================== -->
<div id="loader">
    <div class="loader-container">
        <div class="dash uno"></div>
        <div class="dash dos"></div>
        <div class="dash tres"></div>
        <div class="dash cuatro"></div>
    </div>
</div>
